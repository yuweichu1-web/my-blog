---
import { SITE_TITLE } from '../consts';
import HeaderLink from './HeaderLink.astro';
---

<header>
	<nav>
		<div class="logo">
			<svg class="logo-icon" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2">
				<circle cx="12" cy="12" r="10"/>
				<path d="M12 2a10 10 0 0 1 10 10" stroke-dasharray="4 2"/>
				<circle cx="12" cy="12" r="3" fill="currentColor"/>
				<path d="M12 9V2M12 22v-7"/>
			</svg>
			<h2><a href="/">{SITE_TITLE}</a></h2>
		</div>
		<div class="internal-links">
			<HeaderLink href="/">首页</HeaderLink>
			<HeaderLink href="/blog">资讯</HeaderLink>
			<HeaderLink href="/about">关于</HeaderLink>
		</div>
		<div class="social-links">
			<a href="https://weibo.com" target="_blank" title="微博">
