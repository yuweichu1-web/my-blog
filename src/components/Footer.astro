<style>
	footer {
		padding: 3em 1em;
		background: linear-gradient(180deg, var(--bg-secondary) 0%, var(--carbon-black) 100%);
		border-top: 2px solid var(--racing-orange);
		box-shadow: 0 -4px 20px rgba(0, 0, 0, 0.5);
	}
	
	.footer-content {
		max-width: 1200px;
		margin: 0 auto;
		display: flex;
		flex-direction: column;
		align-items: center;
		gap: 1.5em;
	}
	
	.footer-brand {
		display: flex;
		align-items: center;
		gap: 0.6em;
	}
	
	.logo-icon {
		width: 28px;
		height: 28px;
		color: var(--racing-orange);
	}
	
	.brand-name {
		font-family: 'Orbitron', sans-serif;
		font-size: 1.2em;
		font-weight: 700;
		color: var(--white);
		letter-spacing: 0.1em;
	}
	
	.footer-links {
		display: flex;
		gap: 2em;
		flex-wrap: wrap;
		justify-content: center;
	}
	
	.footer-links a {
		color: var(--text-secondary);
		text-decoration: none;
		font-family: 'Rajdhani', sans-serif;
		font-weight: 500;
		font-size: 1em;
		transition: all 0.3s ease;
		position: relative;
	}
	
	.footer-links a::after {
		content: '';
		position: absolute;
		bottom: -4px;
		left: 0;
		width: 0;
		height: 2px;
		background: var(--racing-orange);
		transition: width 0.3s ease;
	}
	
	.footer-links a:hover {
		color: var(--racing-orange);
	}
	
	.footer-links a:hover::after {
		width: 100%;
	}
	
	.social-links {
		display: flex;
		gap: 1em;
		justify-content: center;
	}
	
	.social-links a {
		color: var(--chrome);
		transition: all 0.3s ease;
		display: flex;
		align-items: center;
		justify-content: center;
		width: 40px;
		height: 40px;
		border-radius: 50%;
		border: 1px solid var(--border);
		background: var(--bg-card);
	}
	
	.social-links a:hover {
		color: var(--neon-blue);
		border-color: var(--neon-blue);
		box-shadow: 0 0 15px rgba(0, 212, 255, 0.4);
		transform: translateY(-3px);
	}
	
	.copyright {
		text-align: center;
		color: var(--text-secondary);
		font-size: 0.9em;
	}
	
	.copyright p {
		margin: 0.3em 0;
	}
	
	.powered {
		font-size: 0.8em;
		opacity: 0.6;
	}
	
	@media (max-width: 720px) {
		footer {
			padding: 2em 1em;
		}
		
		.footer-links {
			gap: 1em;
		}
		
		.brand-name {
			font-size: 1em;
		}
	}
</style>
